# فایل .env

# پورت لود بالانسر
LB_PORT=3000

# اطلاعات Redis (باید همان Redis مشترک با mediasoup nodes باشد)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Secret (تغییرش بده!)
SESSION_SECRET=your-super-secret-key-change-this-in-production

# رمز عبور مدیر (هش شده با bcrypt)
# برای ساختن هش جدید، از دستور زیر استفاده کن:
# node -e "const bcrypt = require('bcrypt'); bcrypt.hash('YOUR_PASSWORD', 10).then(console.log);"
#
# پیش‌فرض: admin123
ADMIN_PASSWORD_HASH=$2b$10$EixZaYVK1fsbw1ZfbX3OXePaWxn96p36WQoeG6Lruj3vjPGga31lW

# تایم‌اوت سرور (میلی‌ثانیه)
# سروری که بیش از این مدت heartbeat نفرستاده باشد، مرده در نظر گرفته میشود
SERVER_TIMEOUT=45000